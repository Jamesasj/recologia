### Modelo com  Zeros Inflados
set.seed(123)
### Gerando os dados
psi <- 0.7
n.amostras <- 30
x <- gl(n = 2, k = n.amostras, labels = c("Sem Flor", "Com Flor"))
w <- rbinom(n = 2*n.amostras, size = 1, prob = psi)
chance <- ifelse(x=="Com Flor",0.3,0.6)
C <- rbinom(n = 2*n.amostras,size=1,prob=  w * chance)
cbind(x, w, C)


### Analise Frequentista
#install.packages("pscl")
library(pscl)
modelo.z <- zeroinfl(C ~ x | 1, dist = "poisson")
summary(modelo.z)
 
modelo.glm <- glm(C ~ x , family = "poisson")
summary(modelo.glm)
 
logLik(modelo.z)
logLik(modelo.glm)
 
extractAIC(modelo.z)
extractAIC(modelo.glm)